#!/usr/bin/env node
'use strict';

// provide a title to the process
process.title = 'LogChimp';

const argv = process.argv.slice(2);
if (argv.length === 0) {
  console.error('No command specified. Run `logchimp help` for usage');
  process.exit(1);
}

const bootstrap = require('../src/bootstrap');
bootstrap.run(argv);
